<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="15px"
        card_view:cardUseCompatPadding="true">
    <com.zhy.autolayout.AutoRelativeLayout
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:paddingRight="20px"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <!--序号的图片-->
        <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_xuhao"
                android:layout_width="80px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="80px">

            <ImageView
                    android:src="@drawable/iv_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/btn_xuhao"
                    android:text="12"
                    android:textSize="48px"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="80px"
                    android:layout_height="80px"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
                android:layout_toRightOf="@+id/rl_xuhao"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东门车站旁"
                android:textSize="34px"
                android:textColor="@color/black"
        />

        <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_pandate"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="5px"
                android:layout_height="30px">

            <TextView
                    android:id="@+id/tv_pan_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:textColor="#6d6d70"
                    android:text="盘点时间:"
                    android:textSize="26px"
                    android:gravity="center_vertical"
            />

            <TextView
                    android:id="@+id/tv_pan_date_value"
                    android:layout_toRightOf="@+id/tv_pan_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:textColor="@color/red"
                    android:text="2018/12-18 12:12"
                    android:textSize="26px"
                    android:gravity="center_vertical"
            />
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoLinearLayout
                android:layout_toRightOf="@+id/rl_xuhao"
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:layout_below="@+id/tv_name"
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <!-- 小区类型 -->
            <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_dot_name"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="物品编号:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />

                <TextView
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="物品型号:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />


                <TextView
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="项目组:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />

                <TextView
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="使用人:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />
            </com.zhy.autolayout.AutoLinearLayout>


            <!-- 小区类型 -->
            <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_dot_value"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="10px"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:gravity="center_vertical"
                        android:textColor="#A1A1A3"
                        android:text="178690"
                        android:textSize="26px"
                />

                <TextView
                        android:id="@+id/tv_xinghao"
                        android:layout_marginTop="15px"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:gravity="center_vertical"
                        android:textColor="#A1A1A3"
                        android:text=""
                        android:textSize="26px"
                />


                <TextView
                        android:layout_marginTop="15px"
                        android:id="@+id/tv_belong_project"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:gravity="center_vertical"
                        android:textColor="#A1A1A3"
                        android:text="技术开发组"
                        android:textSize="26px"
                />

                <TextView
                        android:id="@+id/tv_by_people"
                        android:layout_marginTop="15px"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:gravity="center_vertical"
                        android:textColor="#A1A1A3"
                        android:text="re大神"
                        android:textSize="26px"
                />
            </com.zhy.autolayout.AutoLinearLayout>


            <!--竖线的分割符-->
            <View
                    android:layout_toRightOf="@+id/ll_dot_value"
                    android:id="@+id/view_xian"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="10px"
                    android:layout_width="4px"
                    android:background="@color/fen_se"
                    android:layout_height="165px"/>



            <!-- 相关盘点信息 -->
            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_toRightOf="@+id/view_xian"
                    android:id="@+id/ll_pandian"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:layout_height="wrap_content">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="盘点人:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />


                <TextView
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="所属部门:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />

                <TextView
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="项目编码:"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_toRightOf="@+id/ll_pandian"
                    android:id="@+id/ll_pandian_value"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="10px"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/pan_name"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text=""
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />

                <TextView
                        android:id="@+id/tv_department"
                        android:layout_marginTop="15px"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text="技术部"
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />

                <TextView
                        android:id="@+id/tv_project_num"
                        android:layout_marginTop="15px"
                        android:layout_width="@dimen/asset_list_value_width"
                        android:layout_height="30px"
                        android:textColor="#6d6d70"
                        android:text=""
                        android:textSize="26px"
                        android:gravity="center_vertical"
                />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_pan_state"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20px"
                android:layout_below="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_height="30px">

            <TextView
                    android:id="@+id/tv_pan_state"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:textColor="#6d6d70"
                    android:text="盘点状态:"
                    android:textSize="26px"
                    android:gravity="center_vertical"
            />

            <TextView
                    android:id="@+id/tv_pan_state_value"
                    android:layout_toRightOf="@+id/tv_pan_state"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:textColor="@color/red"
                    android:text="已盘点"
                    android:textSize="26px"
                    android:gravity="center_vertical"
            />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</android.support.v7.widget.CardView>
