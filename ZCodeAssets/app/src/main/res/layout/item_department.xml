<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_choose_item"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90px">

        <TextView
                android:id="@+id/tv_department_name"
                android:textColor="@color/black"
                android:text="技术部门"
                android:gravity="center"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="90px"/>
        
         <View
               android:id="@+id/view_ok"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_width="50px"
               android:background="@drawable/iv_choose"
               android:layout_marginRight="30px"
               android:layout_height="50px"></View>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
            android:id="@+id/tv_choose"
            android:textColor="@color/fen_se"
            android:text="请选择"
            android:gravity="left|center_vertical"
            android:textSize="30px"
            android:paddingLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="90px"/>

         <View
              android:id="@+id/line"
              android:layout_width="match_parent"
              android:background="@color/lightgray"
              android:layout_height="1px"></View>
</com.zhy.autolayout.AutoLinearLayout>