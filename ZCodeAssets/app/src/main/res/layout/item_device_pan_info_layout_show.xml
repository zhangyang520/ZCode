<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/activity_background_color"
        android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
            android:layout_below="@+id/title"
            android:id="@+id/rl_client_name"
            android:paddingLeft="20px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:background="@color/white"
            android:paddingBottom="30px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="36px"
                  android:text="盘点时间"
                  android:textColor="@color/black"
                  android:textSize="30px"
                  android:layout_centerVertical="true"
        />

        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_device_pan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="30px"
                android:textColor="#666666"
                android:textColorHint="#D5D5D5"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:ellipsize="end"
                android:maxEms="16"
                android:layout_marginTop="2px"
        />
    </com.zhy.autolayout.AutoRelativeLayout>

    <!--线条-->
    <View
            android:layout_below="@+id/rl_client_name"
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/base_bg_line"></View>

    <com.zhy.autolayout.AutoRelativeLayout
            android:layout_below="@+id/line_2"
            android:id="@+id/rl_client_xingming"
            android:paddingLeft="20px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:paddingBottom="30px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:text="盘点人"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerVertical="true"
        />

        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_device_pan_by_people"
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:background="@null"
                android:textSize="30px"
                android:textColor="#666666"
                android:textColorHint="#D5D5D5"
                android:layout_centerVertical="true"
                android:layout_marginTop="2px"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--线条-->
    <View
            android:layout_below="@+id/rl_client_xingming"
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/base_bg_line"></View>

    <com.zhy.autolayout.AutoRelativeLayout
            android:layout_below="@+id/line_1"
            android:id="@+id/rl_client_phone"
            android:paddingLeft="20px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:paddingBottom="30px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:text="使用部门"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerVertical="true"
        />

        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_device_department"
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:textSize="30px"
                android:textColor="#666666"
                android:textColorHint="#D5D5D5"
                android:layout_centerVertical="true"
                android:layout_marginTop="2px"
        />
    </com.zhy.autolayout.AutoRelativeLayout>

    <!-- 客户阶段 -->
    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_client_state"
            android:layout_below="@+id/rl_client_phone"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:paddingBottom="30px"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盘点状态"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="30px"
        />

        <!-- 使用人  对应的值-->
        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_device_pan_state"
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:textSize="30px"
                android:textColor="#666666"
                android:textColorHint="#D5D5D5"
                android:layout_centerVertical="true"
                android:layout_marginTop="2px"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>