<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom = "http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

     <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

          <!--顶部值 F6F6F6-->
         <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/back_main_gray_color"
            android:gravity="center_vertical"
            android:layout_height="110px">

        <ImageView
                android:id="@+id/iv_search"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="30px"
                android:src="@drawable/search"
        />

        <com.kekstudio.dachshundtablayout.DachshundTabLayout
                android:id="@+id/ll_middle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                custom:ddAnimatedIndicator="dachshund"
                custom:ddIndicatorColor="#d4237a"
                custom:ddIndicatorHeight="6dp"
                custom:ddCenterAlign="true"
                custom:tabGravity="center"
                custom:tabMode="scrollable"
        >

        </com.kekstudio.dachshundtablayout.DachshundTabLayout>
        <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:src="@drawable/setting"
        />
    </com.zhy.autolayout.AutoLinearLayout>


         <FrameLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                    android:layout_weight="1">

             <!-- frameLayout布局 -->
             <android.support.v4.view.ViewPager
                     android:id="@+id/container"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_alignParentBottom="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true">
             </android.support.v4.view.ViewPager>


             <View
                     android:id="@+id/maskView"
                     android:background="#bdbdbd"
                     android:visibility="gone"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"></View>
         </FrameLayout>



         <!-- 底部的颜色 -->
         <View
                 android:id="@+id/view_bottom"
                 android:layout_width="match_parent"
                 android:layout_alignParentBottom="true"
                 android:background="#E8E8E8"
                 android:layout_height="150px"></View>

       </com.zhy.autolayout.AutoLinearLayout>


    <!-- 底部的信息 -->
       <com.zhy.autolayout.AutoRelativeLayout
               android:id="@+id/rl_bottom"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:background="@color/transparent"
               android:layout_width="match_parent"
               android:layout_height="190px">


           <!--已盘点 数量-->
           <TextView
                   android:id="@+id/tv_total_num"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="95px"
                   android:text="总数:"
                   android:layout_marginLeft="20px"
                   android:textSize="30px"
                   android:textColor="@color/gray"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:layout_toRightOf="@+id/tv_total_num"
                   android:id="@+id/tv_total_num_value"
                   android:textSize="30px"
                   android:layout_centerVertical="true"
                   android:text="30"
                   android:layout_marginLeft="10px"
                   android:layout_alignTop="@+id/tv_total_num"
                   android:textColor="@color/blue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <!-- 图片的imageButton -->
           <android.support.v7.widget.AppCompatImageView
                   android:id="@+id/iv_saomiao"
                   android:src="@mipmap/iv_sao"
                   android:scaleType="fitCenter"
                   android:layout_centerHorizontal="true"
                   android:layout_width="190px"
                   android:layout_height="190px"
                  />

           <!--已盘点 数量-->
           <TextView
                   android:id="@+id/tv_yipandian_num"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="95px"
                   android:text="已盘点数量:"
                   android:textSize="30px"
                   android:textColor="@color/gray"
                   android:layout_marginRight="10px"
                   android:layout_toLeftOf="@+id/tv_yipandian_num_value"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/tv_yipandian_num_value"
                   android:textSize="30px"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:text="30"
                   android:layout_marginRight="20px"
                   android:layout_alignTop="@+id/tv_yipandian_num"
                   android:textColor="@color/red"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
       </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
